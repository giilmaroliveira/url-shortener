generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Url {
  id          String   @id @default(uuid())
  slug        String   @unique
  originalUrl String
  createdAt   DateTime @default(now())
  Visit       Visit[]
}

model Visit {
  id        String   @id @default(uuid())
  url       Url      @relation(fields: [urlId], references: [id], onDelete: Cascade)
  urlId     String
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
}
